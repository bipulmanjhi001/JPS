<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/add_client"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Add Client"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/radioGrp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="64dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <RadioButton
                android:id="@+id/radioM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:checked="true"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Male" />

            <RadioButton
                android:id="@+id/radioF"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:checked="false"
                android:layout_weight="1"
                android:textSize="14dp"
                android:text="Female" />

        </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:textSize="14dp"
                android:inputType="textPersonName"
                android:lines="1"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawablePadding="15dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:visibility="visible"
                android:drawableLeft="@drawable/ic_avatar"
                android:textColor="@android:color/black"
                android:gravity="start|center_vertical"
                android:hint="Name"
                android:id="@+id/Name"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Address"
                android:layout_width="fill_parent"
                android:layout_height="80dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:inputType="textMultiLine"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawablePadding="15dp"
                android:visibility="visible"
                android:backgroundTint="@color/colorPrimaryDark"
                android:lines="5"
                android:overScrollMode="always"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_placeholder"
                android:scrollbarStyle="insideInset"
                android:minLines="5"
                android:gravity="top|left"
                android:scrollbars="vertical"
                android:hint="Address"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Mobile"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="phone"
                android:lines="1"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:drawablePadding="15dp"
                android:drawableLeft="@drawable/ic_phone_call"
                android:maxLength="10"
                android:visibility="visible"
                android:textColor="@android:color/black"
                android:gravity="start|center_vertical"
                android:hint="Mobile"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:textColor="@android:color/black"
                android:drawablePadding="15dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:visibility="visible"
                android:drawableLeft="@drawable/ic_email"
                android:gravity="start|center_vertical"
                android:hint="Email"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_weight="1"
                android:id="@+id/FOLLOW"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:lines="1"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawablePadding="15dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:visibility="visible"
                android:drawableLeft="@drawable/ic_chat"
                android:textColor="@android:color/black"
                android:gravity="start|center_vertical"
                android:hint="status"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/get_follow"
                android:layout_width="80sp"
                android:background="@drawable/select_button"
                android:textStyle="bold"
                android:text="FOLLOW"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_weight="1"
                android:id="@+id/Follow_Date"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:paddingLeft="10dp"
                android:inputType="date"
                android:lines="1"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawablePadding="15dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:visibility="visible"
                android:drawableLeft="@drawable/ic_calendar"
                android:textColor="@android:color/black"
                android:gravity="start|center_vertical"
                android:hint="Follow Date"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/get_date"
                android:layout_width="80sp"
                android:background="@drawable/select_button"
                android:textStyle="bold"
                android:text="Date"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/Comment"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:paddingLeft="10dp"
                android:inputType="text"
                android:lines="2"
                android:textSize="14dp"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:drawablePadding="15dp"
                android:textColor="@android:color/black"
                android:drawableLeft="@drawable/ic_speech_bubbles_comment_option"
                android:backgroundTint="@color/colorPrimaryDark"
                android:visibility="visible"
                android:gravity="start|center_vertical"
                android:hint="Comment"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/Submit"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Submit"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold"
                android:background="@drawable/round_back"
                android:layout_width="match_parent"
                android:layout_height="45dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
